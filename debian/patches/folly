+
+#include <boost/noncopyable.hpp>
+#include <functional>
+
+namespace folly { namespace wangle {
+  class Executor : boost::noncopyable {
+   public:
+     virtual ~Executor() = default;
+     virtual void add(std::function<void()>&&) = 0;
+  };
