+  google::ParseCommandLineFlags(&argc, &argv, true);
+
+  for (int len : {1, 8, 10, 16, 32, 64, 128, 256, 10*1024, 1024*1024}) {
+    initStr(len);
+    initDelims(len);
+    runBenchmarks();
+  }
+  return 0;
