+// Numbering here is from C++11
+template <class String> void clause11_21_4_8_9_a(String & test) {
+  basic_stringstream<typename String::value_type> stst(test.c_str());
+  String str;
+  while (stst) {
+    stst >> str;
+    test += str + test;
+  }
+}
