+      "akjhfk jhkjlakjhfk jhkjlakjhfk jhkjl akjhfk"
+      "akjhfk jhkjlakjhfk jhkjlakjhfk jhkjl akjhfk"
+      "akjhfk jhkjlakjhfk jhkjlakjhfk jhkjl akjhfk"
+      "akjhfk jhkjlakjhfk jhkjlakjhfk jhkjl akjhfk"
+      "\"");
+  }
+}
+
+BENCHMARK(toJson, iters) {
+  dynamic something = parseJson(
+    "{\"old_value\":40,\"changed\":true,\"opened\":false,\"foo\":[1,2,3,4,5,6]}"
+  );
+
+  for (int i = 0; i < iters; i++) {
+    toJson(something);
+  }
+}
